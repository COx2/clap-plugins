{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 17,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "github",
            "description": "Configuration used by Github Actions",
            "binaryDir": "${sourceDir}/builds/${presetName}",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": {
                    "type": "boolean",
                    "value": true
                },
                "CMAKE_TOOLCHAIN_FILE": {
                    "type": "FILEPATH",
                    "value": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
                },
                "VCPKG_OVERLAY_TRIPLETS": {
                    "type": "FILEPATH",
                    "value": "${sourceDir}/vcpkg-overlay/triplets"
                },
                "UsePkgConfig": {
                    "type": "boolean",
                    "value": false
                }
            }
        },
        {
            "name": "ninja-vcpkg",
            "description": "Configure with vcpkg toolchain and generate Ninja project files for all configurations",
            "binaryDir": "${sourceDir}/builds/${presetName}",
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": {
                    "type": "boolean",
                    "value": true
                },
                "CMAKE_TOOLCHAIN_FILE": {
                    "type": "FILEPATH",
                    "value": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
                },
                "VCPKG_OVERLAY_TRIPLETS": {
                    "type": "FILEPATH",
                    "value": "${sourceDir}/vcpkg-overlay/triplets"
                },
                "UsePkgConfig": {
                    "type": "boolean",
                    "value": false
                }
            }
        },
        {
            "name": "vs-vcpkg",
            "description": "Configure with vcpkg toolchain and generate VS project files for all configurations",
            "binaryDir": "${sourceDir}/builds/${presetName}",
            "generator": "Visual Studio 17 2022",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": {
                    "type": "boolean",
                    "value": true
                },
                "CMAKE_TOOLCHAIN_FILE": {
                    "type": "FILEPATH",
                    "value": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
                },
                "VCPKG_OVERLAY_TRIPLETS": {
                    "type": "FILEPATH",
                    "value": "${sourceDir}/vcpkg-overlay/triplets"
                },
                "UsePkgConfig": {
                    "type": "boolean",
                    "value": false
                }
            }
        },
        {
            "name": "xcode-vcpkg",
            "description": "Configure with vcpkg toolchain and generate XCode project files for all configurations",
            "binaryDir": "${sourceDir}/builds/${presetName}",
            "generator": "Xcode",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": {
                    "type": "boolean",
                    "value": true
                },
                "CMAKE_TOOLCHAIN_FILE": {
                    "type": "FILEPATH",
                    "value": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
                },
                "VCPKG_OVERLAY_TRIPLETS": {
                    "type": "FILEPATH",
                    "value": "${sourceDir}/vcpkg-overlay/triplets"
                },
                "UsePkgConfig": {
                    "type": "boolean",
                    "value": false
                }
            }
        },
        {
            "name": "ninja-system",
            "description": "Ninja + System Libraries",
            "binaryDir": "${sourceDir}/builds/${presetName}",
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": {
                    "type": "boolean",
                    "value": true
                },
                "UsePkgConfig": {
                    "type": "boolean",
                    "value": true
                }
            }
        },
        {
            "name": "xcode-system",
            "binaryDir": "${sourceDir}/builds/${presetName}",
            "generator": "Xcode",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": {
                    "type": "boolean",
                    "value": true
                },
                "UsePkgConfig": {
                    "type": "boolean",
                    "value": true
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "github",
            "configurePreset": "github",
            "description": "Build used by Github Actions",
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "vs-vcpkg",
            "description": "Build using Visual Studio and VCPKG",
            "configurePreset": "vs-vcpkg",
            "targets": [
                "all", "clap-host", "clap-plugins"
            ]
        },
        {
            "name": "ninja-vcpkg",
            "description": "Build using Ninja and VCPKG",
            "configurePreset": "ninja-vcpkg",
            "targets": [
                "all", "clap-host", "clap-plugins"
            ]
        },
        {
            "name": "ninja-system",
            "description": "Build using Ninja and system libraries",
            "configurePreset": "ninja-system",
            "targets": [
                "all", "clap-host", "clap-plugins"
            ]
        }
    ],
    "testPresets": [
        {
            "name": "github",
            "configurePreset": "github",
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "vs-vcpkg",
            "description": "Test using Visual Studio and VCPKG",
            "configurePreset": "vs-vcpkg"
        },
        {
            "name": "ninja-vcpkg",
            "description": "Test using Ninja and VCPKG",
            "configurePreset": "ninja-vcpkg"
        },
        {
            "name": "ninja-system",
            "description": "Test using Ninja and system libraries",
            "configurePreset": "ninja-system"
        }
    ]
}