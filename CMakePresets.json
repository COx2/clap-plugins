    "buildPresets": [
        {
            "name": "github",
            "configurePreset": "github",
            "displayName": "Build github",
            "description": "Build github",
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "vs-vcpkg",
            "description": "Build using Visual Studio and VCPKG",
            "displayName": "vs-vcpkg/all",
            "configurePreset": "vs-vcpkg",
            "targets": [
                "all", "clap-host", "clap-plugins"
            ]
        }
    ],
    "testPresets": [
        {
            "name": "github",
            "configurePreset": "github",
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "vs-vcpkg",
