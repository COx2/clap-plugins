{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 17,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "github",
            "displayName": "Github Actions",
            "description": "Configuration used by Github",
            "binaryDir": "${sourceDir}/builds/${presetName}",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": {
                    "type": "boolean",
                    "value": true
                },
                "CMAKE_TOOLCHAIN_FILE": {
                    "type": "FILEPATH",
                    "value": "./vcpkg/scripts/buildsystems/vcpkg.cmake"
                },
                "VCPKG_OVERLAY_TRIPLETS": {
                    "type": "FILEPATH",
                    "value": "./vcpkg-overlay/triplets"
                },
                "UsePkgConfig": {
                    "type": "boolean",
                    "value": false
                }
            }
        },
        {
            "name": "ninja-vcpkg",
            "displayName": "Ninja + VCPKG",
            "description": "Configure with vcpkg toolchain and generate Ninja project files for all configurations",
            "binaryDir": "${sourceDir}/builds/${presetName}",
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": {
                    "type": "boolean",
                    "value": true
                },
                "CMAKE_TOOLCHAIN_FILE": {
                    "type": "FILEPATH",
                    "value": "./vcpkg/scripts/buildsystems/vcpkg.cmake"
                },
                "VCPKG_OVERLAY_TRIPLETS": {
                    "type": "FILEPATH",
                    "value": "./vcpkg-overlay/triplets"
                },
                "UsePkgConfig": {
                    "type": "boolean",
                    "value": false
                }
            }
        },
        {
            "name": "vs-vcpkg",
            "displayName": "vs-vcpkg",
            "description": "Configure with vcpkg toolchain and generate VS project files for all configurations",
            "binaryDir": "${sourceDir}/vsb",
