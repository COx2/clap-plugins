            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": {
                    "type": "boolean",
                    "value": true
                },
                "CMAKE_TOOLCHAIN_FILE": {
                    "type": "FILEPATH",
                    "value": "./vcpkg/scripts/buildsystems/vcpkg.cmake"
                },
                "VCPKG_OVERLAY_TRIPLETS": {
                    "type": "FILEPATH",
                    "value": "./vcpkg-overlay/triplets"
                },
                "UsePkgConfig": {
                    "type": "boolean",
                    "value": false
                }
            }
        },
        {
            "name": "xcode-vcpkg",
            "displayName": "XCode + VCPKG",
            "description": "Configure with vcpkg toolchain and generate XCode project files for all configurations",
            "binaryDir": "${sourceDir}/builds/${presetName}",
            "generator": "Xcode",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": {
                    "type": "boolean",
                    "value": true
                },
                "CMAKE_TOOLCHAIN_FILE": {
                    "type": "FILEPATH",
                    "value": "./vcpkg/scripts/buildsystems/vcpkg.cmake"
                },
                "VCPKG_OVERLAY_TRIPLETS": {
                    "type": "FILEPATH",
                    "value": "./vcpkg-overlay/triplets"
                },
                "UsePkgConfig": {
                    "type": "boolean",
                    "value": false
                }
            }
        },
        {
            "name": "ninja-system",
            "displayName": "Ninja + System Libraries",
            "binaryDir": "${sourceDir}/builds/${presetName}",
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": {
                    "type": "boolean",
                    "value": true
                },
                "UsePkgConfig": {
                    "type": "boolean",
                    "value": true
                }
            }
        },
        {
            "name": "xcode-system",
